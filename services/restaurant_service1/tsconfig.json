{
  "compilerOptions": {
    "target": "ES2022",
    "outDir": "dist",
    "baseUrl": "./", // Set base directory for module resolution
    "paths": {
      "~/*": [
        "./src/*"
      ] // Add path aliases if necessary
    },
    "moduleResolution": "Node", // Use Node's ESM resolution
    "plugins": [
      {
        "name": "next"
      }
    ],
    "module": "ESNext", // Match Node.js ESM style
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts"
  ] // Ensure all TypeScript files are included
}